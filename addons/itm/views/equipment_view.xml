<odoo>

    <!-- Action for Buttons -->
    <record id="act_equipment_2_access" model="ir.actions.act_window">
        <field name="res_model">itm.access</field>
        <field name="name">Credentials</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_equipment_id': active_id }</field>
    </record>

    <record id="act_equipment_2_equipment" model="ir.actions.act_window">
        <field name="res_model">itm.equipment</field>
        <field name="name">Guests</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            {
                'search_default_virtual_parent_id': active_id,
                'search_default_type_virtual': 1,
            }
        </field>
    </record>

    <record id="act_equipment_2_backup" model="ir.actions.act_window">
        <field name="res_model">itm.backup</field>
        <field name="name">Backups</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_equipment_id': active_id }</field>
    </record>

    <record id="act_equipment_2_component" model="ir.actions.act_window">
        <field name="res_model">itm.equipment.component</field>
        <field name="name">Components</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_equipment_id': active_id }</field>
    </record>

    <!-- Assets -->
    <record model="ir.ui.view" id="itm_equipment_tree">
        <field name="name">itm.equipment.tree</field>
        <field name="model">itm.equipment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="code" optional="show" />
                <field name="model" optional="hide" />
                <field name="os_name" optional="hide" />
                <field name="description" optional="show" />
                <field name="ip4_ids" widget="many2many_tags" optional="show" />
                <field name="site_id" optional="show" />
                <field name="location" optional="show" />
                <field name="owner" optional="show" />
                <field name="partner_id" optional="hide" />
                <field name="asset_type_id" optional="show" />
                <field name="brand_id" optional="show" />
                <field name="company_id" groups="base.group_multi_company" />
                <field
                    name="state"
                    decoration-info="state == 'in_store'"
                    decoration-success="state == 'in_use'"
                    decoration-warning="state == 'loaned'"
                    decoration-danger="state == 'in_repair'"
                    decoration-muted="state == 'retired'"
                    widget="badge"
                    optional="show"
                    class="text-dark"
                />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="itm_equipment_form">
        <field name="name">itm.equipment.form</field>
        <field name="model">itm.equipment</field>
        <field name="arch" type="xml">
            <form string="Assets">
                <header>
                    <field
                        name="state"
                        widget="statusbar"
                        options="{'clickable': '1'}"
                        statusbar_visible="in_store,in_use,loaned,in_repair,retired"
                    />
                </header>
                <sheet>
                    <field name="company_id" invisible="1" />
                    <div class="oe_button_box" name="buttons">
                        <button
                            name="%(act_equipment_2_access)d"
                            class="oe_stat_button"
                            icon="fa-key"
                            type="action"
                        >
                            <field name="access_count" widget="statinfo" />
                        </button>
                        <button
                            name="%(act_equipment_2_equipment)d"
                            class="oe_stat_button"
                            icon="fa-th"
                            type="action"
                            attrs="{'invisible': [('function_host','=', False )]}"
                        >
                            <field name="virtual_count" widget="statinfo" />
                        </button>
                        <button
                            name="%(act_equipment_2_backup)d"
                            class="oe_stat_button"
                            icon="fa-floppy-o"
                            type="action"
                            attrs="{'invisible':[('is_backup','=', False )]}"
                        >
                            <field name="backup_count" widget="statinfo" />
                        </button>
                        <button
                            name="%(act_equipment_2_component)d"
                            class="oe_stat_button"
                            icon="fa-floppy-o"
                            type="action"
                        >
                            <field name="component_count" widget="statinfo" />
                        </button>
                    </div>
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <field name="image" class="oe_right oe_avatar" widget="image" />
                    <div class="oe_title">
                        <div class="oe_edit_only oe_left">
                            <label for="name" />
                        </div>
                        <h1>
                            <field name="name" />
                        </h1>
                        <div class="oe_edit_only">
                            <label for="description" />
                        </div>
                        <h2>
                            <field name="description" />
                        </h2>
                        <div class="oe_edit_only">
                            <label for="partner_id" />
                        </div>
                        <h2>
                            <field name="partner_id" />
                        </h2>
                        <div class="oe_edit_only">
                            <label for="function_ids" />
                        </div>
                        <h2>
                            <field
                                name="function_ids"
                                widget="many2many_tags"
                                placeholder="Functions..."
                            />
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="site_id" />
                            <field name="brand_id" />
                            <field name="model" />
                            <field name="os_name" />
                        </group>
                        <group>
                            <field name="code" />
                            <field name="location" />
                            <field name="owner" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Configuration">
                            <group>
                                <group string="Equipment Type">
                                    <field name="asset_type_id" />
                                </group>
                                <group string="Services">
                                    <field name="ad_service_id" />
                                    <field name="dhcp_service_id" />
                                    <field
                                        name="wireless_service_id"
                                        attrs="{'invisible':[('function_wireless','=', False )]}"
                                    />
                                </group>
                            </group>
                            <group>
                                <group string="Basic Configuration">
                                    <field
                                        name="company_id"
                                        string="Company"
                                        groups="base.group_multi_company"
                                        options="{'no_create': True}"
                                    />
                                    <field name="is_backup" />
                                    <field name="is_application" />
                                    <field name="is_contracted" />
                                    <field name="is_partitioned" />
                                    <field name="is_config_file" />
                                </group>
                                <group string="Function Configuration">
                                    <field name="function_host" />
                                    <field name="function_router" />
                                    <field name="function_fileserver" />
                                    <field name="function_database" />
                                    <field name="function_wireless" />
                                </group>
                            </group>
                        </page>
                        <page
                            string="Virtual Machine Data"
                            attrs="{'invisible':[('asset_type_id','!=', %(itm.type_virtual)d)]}"
                        >
                            <group>
                                <group string="Host">
                                    <field name="virtual_parent_id" />
                                </group>
                                <group string="Configuration">
                                    <field name="virtual_memory_amount" />
                                    <field name="virtual_disk_amount" />
                                    <field name="virtual_processor_amount" />
                                    <field name="virtual_network_amount" />
                                </group>
                            </group>
                        </page>
                        <page
                            string="Product Data"
                            attrs="{'invisible':[('asset_type_id','=', %(itm.type_virtual)d)]}"
                        >
                            <group>
                                <group>
                                    <field name="product_id" />
                                    <field name="product_partner_id" />
                                    <field name="product_serial_number" />
                                    <field name="product_note" />
                                </group>
                                <group>
                                    <field name="product_buydate" />
                                    <field
                                        name="product_cost"
                                        groups="itm.group_itm_manager"
                                    />
                                    <field name="product_warranty" />
                                </group>
                            </group>
                        </page>
                        <page
                            string="Partition Information"
                            attrs="{'invisible':[('is_partitioned','=', False )]}"
                        >
                            <group>
                                <field name="partitions_ids" nolabel="1" colspan="2" />
                            </group>
                        </page>
                        <page
                            string="Service Information"
                            attrs="{'invisible':[('is_contracted','=', False )]}"
                        >
                            <group>
                                <group string="Contract Information">
                                    <field name="contract_partner_id" />
                                    <field name="contract_client_number" />
                                    <field name="contract_owner" />
                                    <field name="contract_nif" />
                                    <field name="contract_direction" />
                                </group>
                            </group>
                        </page>
                        <page
                            string="Router Configuration"
                            attrs="{'invisible':[('function_router','=', False )]}"
                        >
                            <div>
                                <group>
                                    <field name="router_dmz" />
                                </group>
                                <group string="Forward Rules">
                                    <field
                                        name="router_forward_ids"
                                        nolabel="1"
                                        colspan="2"
                                    >
                                        <tree editable="bottom">
                                            <field name="name" />
                                            <field name="source_port" />
                                            <field name="destination_port" />
                                            <field name="source_address" />
                                            <field name="destination_address" />
                                            <field name="type" />
                                        </tree>
                                    </field>
                                </group>
                                <group string="Firewall Rules">
                                    <field
                                        name="router_rules_ids"
                                        nolabel="1"
                                        colspan="2"
                                    >
                                        <tree editable="bottom">
                                            <field name="name" />
                                            <field name="source_port" />
                                            <field name="destination_port" />
                                            <field name="source_address" />
                                            <field name="destination_address" />
                                            <field name="permission" />
                                        </tree>
                                    </field>
                                </group>
                            </div>
                        </page>
                        <page string="Network Configuration">
                            <group>
                                <field
                                    name="equipment_network_ids"
                                    nolabel="1"
                                    colspan="2"
                                >
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="mac" />
                                        <field name="network_id" />
                                        <field name="use_dhcp4" />
                                        <field
                                            name="static_ipv4_id"
                                            attrs="{'invisible':[('use_dhcp4','=',True)]}"
                                            context="{'default_network_id': network_id}"
                                            domain="[('network_id', '=', network_id)]"
                                        />
                                        <field
                                            name="dhcp_ipv4_id"
                                            attrs="{'invisible':[('use_dhcp4','=',False)]}"
                                            context="{'default_network_id': network_id}"
                                            domain="[('network_id', '=', network_id)]"
                                        />
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page
                            string="File Server"
                            attrs="{'invisible':[('function_fileserver','=', False )]}"
                        >
                            <group>
                                <field
                                    name="equipment_mapping_ids"
                                    nolabel="1"
                                    colspan="2"
                                >
                                    <tree>
                                        <field name="name" />
                                        <field name="path" />
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page
                            string="Databases"
                            attrs="{'invisible':[('function_database','=', False )]}"
                        >
                            <group>
                                <field name="db_ids" nolabel="1" colspan="2">
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="codification" />
                                        <field name="description" />
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page
                            string="Applications"
                            attrs="{'invisible':[('is_application','=', False )]}"
                        >
                            <group>
                                <field name="application_ids" nolabel="1" colspan="2" />
                            </group>
                        </page>
                        <page
                            string="Configuration Files"
                            attrs="{'invisible':[('is_config_file','=', False )]}"
                        >
                            <group>
                                <field
                                    name="configuration_file_ids"
                                    nolabel="1"
                                    colspan="2"
                                >
                                    <tree editable="bottom">
                                        <field name="name" />
                                        <field name="date" />
                                        <field
                                            name="config_file"
                                            filename="config_file_filename"
                                        />
                                        <field
                                            name="config_file_filename"
                                            invisible="1"
                                        />
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Worklog">
                            <field name="worklog_ids" nolabel="1" colspan="2" />
                        </page>
                        <page string="Audit Data" groups="itm.group_itm_mod">
                            <group>
                                <group>
                                    <field name="create_uid" />
                                    <field name="create_date" />
                                </group>
                                <group>
                                    <field name="write_uid" />
                                    <field name="write_date" />
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
        </form>
        </field>
    </record>

    <record model="ir.ui.view" id="itm_equipment_search">
        <field name="name">itm.equipment.search</field>
        <field name="model">itm.equipment</field>
        <field name="arch" type="xml">
            <search string="Asset">
                <!--Searchs-->
                <field name="partner_id" string="Partner" />
                <field name="asset_type_id" string="Type" />
                <field name="virtual_parent_id" string="Host" />
                <field name="site_id" string="Site" />
                <field name="code" string="Code" />
                <!--Filters-->
                <filter
                    name="is_contracted"
                    string="Contracted"
                    domain="[('is_contracted','=',1)]"
                />
                <filter name="is_own" string="Own" domain="[('is_contracted','=',0)]" />
                <separator />
                <filter
                    name="is_backup"
                    string="With Backup"
                    domain="[('is_backup','=',1)]"
                    help="Assets with backup"
                />
                <filter
                    name="is_notbackup"
                    string="Without Backup"
                    domain="[('is_backup','=',0)]"
                    help="Assets without backup"
                />
                <separator />
                <filter
                    name="is_application"
                    string="With Applications"
                    domain="[('is_application','=',1)]"
                    help="Assets with applications"
                />
                <filter
                    name="isnot_application"
                    string="Without Applications"
                    domain="[('is_application','=',0)]"
                    help="Assets without applications"
                />
                <separator string="Asset Type" />
                <filter
                    name="type_bundle"
                    string="Physical Asset"
                    domain="[('asset_type_id','child_of', %(itm.type_bundle)d)]"
                    context="{
                                    'search_default_type_bundle': 1,
                                    'search_default_type_virtual': 0,
                                    'search_default_type_network': 0,
                                    'search_default_type_software': 0
                                }"
                />
                <filter
                    name="type_virtual"
                    string="Virtual Asset"
                    domain="[('asset_type_id','child_of', %(itm.type_virtual)d)]"
                    context="{
                                    'search_default_type_virtual': 1,
                                    'search_default_type_bundle': 0,
                                    'search_default_type_network': 0,
                                    'search_default_type_software': 0
                                }"
                />
                <filter
                    name="type_network"
                    string="Network Asset"
                    domain="[('asset_type_id','child_of', %(itm.type_network)d)]"
                    context="{
                                    'search_default_type_network': 1,
                                    'search_default_type_virtual': 0,
                                    'search_default_type_bundle': 0,
                                    'search_default_type_software': 0
                                }"
                />
                <filter
                    name="type_software"
                    string="Software Asset"
                    domain="[('asset_type_id','child_of', %(itm.type_software)d)]"
                    context="{
                                    'search_default_type_software': 1,
                                    'search_default_type_network': 0,
                                    'search_default_type_virtual': 0,
                                    'search_default_type_bundle': 0,
                                }"
                />
                <separator string="Functions" />
                <filter
                    name="is_partitioned"
                    string="Partitioned"
                    domain="[('is_partitioned','=',1)]"
                    help="Assets with partitions"
                />
                <filter
                    name="function_fileserver"
                    string="File Server"
                    domain="[('function_fileserver','=',1)]"
                />
                <filter
                    name="function_host"
                    string="Host"
                    domain="[('function_host','=',1)]"
                />
                <filter
                    name="function_router"
                    string="Router"
                    domain="[('function_router','=',1)]"
                />
                <filter
                    name="function_database"
                    string="Database Server"
                    domain="[('function_database','=',1)]"
                />
                <filter
                    name="function_wireless"
                    string="Wireless Device"
                    domain="[('function_wireless','=',1)]"
                />
                <separator />
                <filter
                    name="archived"
                    string="Archived"
                    domain="[('active','=',False)]"
                />
                <separator />
                <!--Groups-->
                <group expand="0" string="Group By...">
                    <filter
                        name="by_partner"
                        string="Partner"
                        icon="terp-personal"
                        domain="[]"
                        context="{'group_by':'partner_id'}"
                    />
                    <filter
                        name="by_type"
                        string="Type"
                        icon="terp-personal"
                        domain="[]"
                        context="{'group_by':'asset_type_id'}"
                    />
                    <filter
                        name="by_state"
                        string="State"
                        icon="terp-personal"
                        domain="[]"
                        context="{'group_by':'state'}"
                    />
                    <filter
                        name="by_parent"
                        string="Host"
                        icon="terp-personal"
                        domain="[]"
                        context="{'group_by':'virtual_parent_id'}"
                    />
                    <filter
                        name="by_contract_partner"
                        string="Contractor"
                        icon="terp-personal"
                        domain="[]"
                        context="{'group_by':'contract_partner_id'}"
                    />
                    <filter
                        name="by_location"
                        string="Location"
                        icon="terp-personal"
                        domain="[]"
                        context="{'group_by':'location'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="itm_equipment_kanban">
        <field name="name">itm.equipment.kanban</field>
        <field name="model">itm.equipment</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="id" />
                <field name="name" />
                <field name="code" />
                <field name="model" />
                <field name="ip4_ids" />
                <field name="location" />
                <field name="owner" />
                <field name="asset_type_id" />
                <field name="brand_id" />
                <field name="os_name" />
                <field name="state" />
                <templates>
                    <t t-name="kanban-tooltip">
                        <ul class="oe_kanban_tooltip">
                            <li><b><t t-esc="record.asset_type_id.value" />:</b>
                                 <t t-esc="record.name.value" />
                            </li>
                            <li t-if="record.brand_id.raw_value"><b>Brand:</b>
                                 <t t-esc="record.brand_id.value" />
                            </li>
                            <li t-if="record.model.raw_value"><b>Model:</b>
                                 <t t-esc="record.model.value" />
                            </li>
                            <li t-if="record.os_name.raw_value"><b>OS Name:</b>
                                 <t t-esc="record.os_name.value" />
                            </li>
                        </ul>
                    </t>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_image mr-1">
                                <img
                                    t-att-src="kanban_image('itm.equipment', 'image', record.id.raw_value)"
                                    alt="Equipment"
                                    class="o_image_64_contain"
                                />
                            </div>
                            <div class="oe_kanban_content" tooltip="kanban-tooltip">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings mt4 ms-1">
                                        <strong class="o_kanban_record_title">
                                            <field name="name" />
                                            <span t-if="record.code.raw_value">
                                                <small> (<field name="code" />)</small>
                                            </span>
                                        </strong>
                                    </div>
                                    <span class="float-end text-end">
                                        <t t-esc="record.asset_type_id.value" />
                                    </span>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div><field name="brand_id" /></div>
                                        <div><field name="model" /></div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-6">
                                        <span><field name="location" /></span>
                                    </div>
                                    <div class="col-6">
                                        <span class="float-end">
                                            <field
                                                name="ip4_ids"
                                                widget="many2many_tags"
                                            />
                                        </span>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-10">
                                        <span><field name="owner" /></span>
                                    </div>
                                    <div class="col-2">
                                        <span class="float-end">
                                            <field
                                                name="state"
                                                widget="label_selection"
                                                options="{
                                                        'classes': {
                                                            'in_store': 'info',
                                                            'in_use': 'success',
                                                            'in_repair': 'danger',
                                                            'loaned': 'warning',
                                                            'retired': 'default'
                                                        }
                                                }"
                                            />
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="itm_equipment_action" model="ir.actions.act_window">
        <field name="name">IT Assets</field>
        <field name="res_model">itm.equipment</field>
        <field name="view_mode">tree,kanban,form</field>
    </record>

    <menuitem
        action="itm_equipment_action"
        id="itm_equipment"
        sequence="20"
        parent="itm_menu_general"
    />

</odoo>
